<%= render "shared/form_errors", model: book %>
<%= form_with model: book, local: true do |form| %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title, required: false %>
  </div>

  <div>
    <%= form.label :author %>
    <%= form.text_field :author, required: false %>
  </div>

  <div>
    <%= form.label :genre %>
    <%= form.text_field :genre, required: false %>
  </div>

  <div>
    <%= form.label :isbn %>
    <%= form.text_field :isbn, required: false %>
  </div>

  <div>
    <%= form.label :total_copies %>
    <%= form.number_field :total_copies, min: 1, required: false %>
  </div>

  <%= form.submit %>
<% end %>
