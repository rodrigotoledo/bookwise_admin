#!/usr/bin/env bash
set -xeuo pipefail

echo ">> Running RuboCop..."
bundle exec rubocop -A

echo ">> Running Brakeman..."
bundle exec brakeman --no-pager --quiet

if [[ -f ./tmp/pids/server.pid ]]; then
  rm ./tmp/pids/server.pid
fi

bundle

bin/rails db:drop
bin/rails db:create
bin/rails db:migrate
bin/rails db:seed

exec "./bin/dev"
